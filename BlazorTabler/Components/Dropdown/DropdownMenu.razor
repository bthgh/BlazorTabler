@inherits TablerComponentBase
@namespace BlazorTabler


<div @ref="@Element" id="@Id" class="@Classes" style="@CssStyle" @attributes="@AdditionalAttributes">
    @ChildContent
</div>

@code
{
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public bool ShowArrow { get; set; }


    private string Classes =>
        string.Join(" ",
                TablerClasses.DropdownMenu,
                ShowArrow ? TablerClasses.DropdownArrow : "",
                CssClass
            )
            .Trim();

}